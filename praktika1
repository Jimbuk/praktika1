			cout << "Выберите программу: 1-ввод вручную, 2-ввод рандомного значения. ";
			cin >> prg;
			cout << endl;
			if (prg == 1) {
				ex2_0();
			}
			else {
				ex2_1();
			}
			break;
		case 3:
			cout << "Выберите программу: 1-ввод вручную, 2-ввод рандомного значения. ";
			cin >> prg;
			cout << endl;
			if (prg == 1) {
				ex3_0();
			}
			else {
				ex3_1();
			}
			break;
		case 4:
			cout << "Выберите программу: 1-ввод вручную, 2-ввод рандомного значения. ";
			cin >> prg;
			cout << endl;
			if (prg == 1) {
				ex4_0();
			}
			else {
				ex4_1();
			}
			break;
		case 5:
			cout << "Выберите программу: 1-ввод вручную, 2-ввод рандомного значения. ";
			cin >> prg;
			cout << endl;
			if (prg == 1) {
				ex5_0();
			}
